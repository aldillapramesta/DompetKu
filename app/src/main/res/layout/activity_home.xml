<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#375092"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="155dp"
        android:background="@drawable/ic_bg_top"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/dompetku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Selamat Datang"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/dompetku2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wishlist"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="407dp" />

    <TextView
        android:id="@+id/dompetku4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pengeluaran"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="604dp" />

    <TextView
        android:id="@+id/dompetku3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pendapatan"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="406dp" />

    <TextView
        android:id="@+id/dompetku5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="History"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="604dp" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_bg_bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="671dp">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_home"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="791dp" />

        <ImageView
            android:id="@+id/imageViewWallet"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_wallet"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_setting"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="95dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_person"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewFullname"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:text="User"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="117dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="83dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/wallet"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="173dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="261dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Nominal Uang Anda saat ini"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/textViewWallet"
        android:layout_width="249dp"
        android:layout_height="27dp"
        android:text="Rp. 35.000.000"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="210dp" />

    <ImageView
        android:id="@+id/imageViewWishlist"
        android:layout_width="133dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/wishlist"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="291dp" />

    <ImageView
        android:id="@+id/imageViewPendapatan"
        android:layout_width="133dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/pendapatan"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="291dp" />

    <ImageView
        android:id="@+id/imageViewPengeluaran"
        android:layout_width="133dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/pengeluaran"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="489dp" />

    <ImageView
        android:id="@+id/imageViewHistory"
        android:layout_width="136dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/history"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="489dp" />


</androidx.constraintlayout.widget.ConstraintLayout>