<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#375092"
    tools:context=".ProfilActivity">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="268dp"
        android:layout_height="459dp"
        app:cardCornerRadius="5dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="261dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:background="@android:color/holo_blue_dark"
            android:orientation="vertical"
            android:padding="10dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_person_putih"
                    android:drawableLeft="@drawable/ic_person_putih"
                    android:drawablePadding="8dp"
                    android:hint="Hasbi" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_person_putih"
                    android:drawableLeft="@drawable/ic_person_putih"
                    android:drawablePadding="8dp"
                    android:hint="Gumay" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="8dp"
                    android:hint="hasbigumay"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_lokasi"
                    android:drawableLeft="@drawable/ic_lokasi"
                    android:drawablePadding="8dp"
                    android:hint="London"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="126dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/ic_akun_lingkaran"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="135dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="61dp"
        android:text="PROFIL"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_bg_bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="786dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="84dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_home"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="791dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="84dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_wallet"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="84dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_setting"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="84dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_person"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="137dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="127dp"
        tools:ignore="MissingConstraints"></LinearLayout>

    <ImageView
            android:id="@+id/imageView18"
            android:layout_width="126dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/ic_akun_lingkaran"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="135dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />



</androidx.constraintlayout.widget.ConstraintLayout>